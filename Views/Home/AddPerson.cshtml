@model IEnumerable<simple_app.Models.Person>

<div class="container mt-4">
    <!-- Add Person Form -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header">
            <h3 class="mb-0">Add Person</h3>
        </div>
        <div class="card-body">
            <form method="post" class="form-inline">
                <label for="Name" class="mr-2">Name:</label>
                <input type="text" id="Name" name="Name" class="form-control mr-2" required />
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

    <!-- List of People -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h3 class="mb-0">List of People</h3>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var person in Model)
                        {
                            <tr>
                                <td>@person.Id</td>
                                <td>@person.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No people found.</p>
            }
        </div>
    </div>
</div>
